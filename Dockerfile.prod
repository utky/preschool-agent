# --- Builder Stage ---
# 1. Install dependencies
FROM node:20-slim AS deps
WORKDIR /app

COPY package.json package-lock.json* ./
RUN npm install

# 2. Build application
FROM node:20-slim AS builder
WORKDIR /app
COPY --from=deps /app/node_modules ./node_modules
COPY . .

# ビルド引数としてVertex AIの接続情報を受け取る
ARG GOOGLE_VERTEX_LOCATION
ARG GOOGLE_VERTEX_PROJECT
# 環境変数として設定する
ENV GOOGLE_VERTEX_LOCATION=${GOOGLE_VERTEX_LOCATION}
ENV GOOGLE_VERTEX_PROJECT=${GOOGLE_VERTEX_PROJECT}

# Next.js アプリケーションをビルドする
# 日本語でコメントを追記
RUN npm run build

# --- Final Stage ---
FROM node:20-slim AS runner
WORKDIR /app

ENV NODE_ENV=production

# ビルドステージからスタンドアロン出力をコピー
COPY --from=builder /app/.next/standalone ./
# public と .next/static ディレクトリをコピー
COPY --from=builder /app/public ./public
COPY --from=builder /app/.next/static ./.next/static

EXPOSE 3000
CMD ["node", "server.js"]